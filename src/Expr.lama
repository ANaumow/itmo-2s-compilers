(* Implementation *)
public fun evalExpr (st, expr) {
  case expr of
    Var   (x)        -> st (x)
  | Const (n)        -> n
  | Binop (op, l, r) -> evalOp (op, evalExpr (st, l), evalExpr (st, r))     
  esac
}
(* End *)
